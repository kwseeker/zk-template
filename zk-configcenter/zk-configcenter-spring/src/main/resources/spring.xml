<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!--配置-->
    <bean class="top.kwseeker.zk.configcenter.spring.ExtendsPropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath*:/zk.properties</value>
            </list>
        </property>
    </bean>
    <bean class="top.kwseeker.zk.configcenter.spring.ConfigAnnotationBeanPostProcessor">
        <constructor-arg index="0" value="${zk.servers}"/>
        <constructor-arg index="1" value="${zk.forceWhenNull}"/>
    </bean>

    <!--annotation扫描-->
    <context:component-scan base-package="top.kwseeker.zk.configcenter.spring" />
    <!--声明支持扩展的annotation配置-->
    <context:annotation-config/>
</beans>